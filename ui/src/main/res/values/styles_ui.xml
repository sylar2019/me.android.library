<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="text">
        <item name="android:textColor">@color/common_text_color_selector</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">false</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="text_large" parent="@style/text">
        <item name="android:textSize">@dimen/common_text_size_large</item>
    </style>

    <style name="text_medium" parent="@style/text">
        <item name="android:textSize">@dimen/common_text_size_medium</item>
    </style>

    <style name="text_title" parent="@style/text">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/Black</item>
    </style>

    <style name="text_content" parent="@style/text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#565555</item>
    </style>

    <style name="text_small" parent="@style/text">
        <item name="android:textSize">@dimen/common_text_size_small</item>
    </style>

    <style name="common_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/common_button_height</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:background">@drawable/common_button_background_selector</item>
        <item name="android:textColor">@color/common_button_text_color_selector</item>
        <item name="android:textSize">@dimen/common_button_text_size</item>
        <item name="android:text">@string/common_ok</item>
    </style>

    <style name="common_listview" parent="@android:style/Widget.Holo.ListView">
        <item name="android:cacheColorHint">@color/Transparent</item>
        <item name="android:listSelector">@color/Transparent</item>
        <item name="android:divider">@color/common_divide_background</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:dividerPadding">0dp</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:fadeScrollbars">true</item>
    </style>

    <style name="common_imageview">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:contentDescription">@null</item>
    </style>

    <style name="common_edittext" parent="@style/text_content">
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:background">@null</item>
    </style>

    <style name="common_checkbox">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:textOn">""</item>
        <item name="android:textOff">""</item>
        <item name="android:background">@drawable/common_switch_selector</item>
    </style>


    <style name="bottom_window_style" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/bottom_window_enter</item>
        <item name="@android:windowExitAnimation">@anim/bottom_window_exit</item>
    </style>

    <style name="wheel_view_style">
        <item name="itemNumber">5</item>
        <item name="lineColor">#a5a5a5</item>
        <item name="lineHeight">1px</item>
        <item name="maskHight">32dp</item>
        <item name="noEmpty">true</item>
        <item name="normalTextColor">#b1b1b1</item>
        <item name="normalTextSize">14sp</item>
        <item name="selectedTextColor">#4b4848</item>
        <item name="selectedTextSize">16sp</item>
        <item name="unitHight">40dp</item>
    </style>

</resources>